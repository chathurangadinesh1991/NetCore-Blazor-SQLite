@inherits NavMenuBase
@using Chinook.Shared.BaseClasses

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Chinook</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span>Home
            </NavLink>
        </div>
        <div class="nav-item px-3" style="overflow-y: scroll;height: 80vh">
            @if (UserPlaylist != null)
            {
                @foreach (var userPl in UserPlaylist)
                {
                    <NavLink class="nav-link" href="@{
                "playlist/" + @userPl.PlaylistId
            }">
                        <i class="bi bi-music-note-list me-3" style="font-size: 1.25em"></i>@userPl.Name
                    </NavLink>
                }
            }
        </div>
    </nav>
</div>